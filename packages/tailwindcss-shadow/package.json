{
  "name": "@achamaro/tailwindcss-shadow",
  "version": "0.0.0",
  "description": "Tailwind CSS plugin that generates shadow colors for a specified color",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/achamaro/tailwindcss-shadow.git"
  },
  "keywords": [
    "tailwindcss",
    "box-shadow",
    "text-shadow",
    "drop-shadow"
  ],
  "author": "achamaro",
  "license": "MIT",
  "homepage": "https://github.com/achamaro/tailwindcss-shadow/packages/tailwindcss-shadow#readme",
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "vitest run"
  },
  "dependencies": {
    "color-convert": "^2.0.1",
    "parse-css-color": "^0.2.1"
  },
  "devDependencies": {
    "@types/color-convert": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "prettier": "^2.8.8",
    "tailwindcss": "^3.3.2",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4",
    "vitest": "^0.30.1"
  },
  "peerDependencies": {
    "tailwindcss": ">=3.3.0"
  },
  "peerDependenciesMeta": {
    "tailwindcss": {
      "optional": true
    }
  }
}
